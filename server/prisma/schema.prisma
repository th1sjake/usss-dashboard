generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum ReportStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id          String   @id @default(uuid())
  staticId    String   @unique
  nickname    String
  password    String
  role        Role     @default(USER)
  
  rankLink    Rank     @relation(fields: [rankId], references: [id])
  rankId      Int

  departmentLink Department? @relation(fields: [departmentId], references: [id])
  departmentId   Int?
  
  reports     Report[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([staticId])
  @@index([rankId])
}

model Rank {
  id     Int    @id @default(autoincrement())
  name   String
  weight Int    @default(0) // For sorting (1 = Cadet, 10 = Chief)
  users  User[]
}

model Department {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model Report {
  id        String       @id @default(uuid())
  
  type      TaskType     @relation(fields: [typeId], references: [id])
  typeId    String
  
  user      User         @relation(fields: [userId], references: [id])
  userId    String
  
  proofUrl  String
  date      DateTime     // The date the work was performed
  points    Int          // Snapshotted points
  
  status    ReportStatus @default(PENDING)
  
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@index([userId, date]) // Fast retrieval for daily/weekly stats
  @@index([status])       // Fast filtering for leaderboard calculation
  @@index([date])         // Fast range queries
}

model TaskType {
  id        String   @id @default(uuid())
  name      String
  category  String
  points    Int
  isActive  Boolean  @default(true) // Soft delete support
  
  reports   Report[]
}

model DiscordConfig {
  id          Int      @id @default(1) // Singleton pattern
  webhookUrl  String
  messageId   String?
  channelId   String?
  
  updatedAt   DateTime @updatedAt
}

